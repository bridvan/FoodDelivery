@model IEnumerable<SignUpVendorVM>
@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Index";
    int counter = 1;
}

<div class="card">
    <div class="card-body">
        <div class="card-title">
            All Vendor
        </div>
        <div class="row">
            <div class="col-12">
                @*<button type="submit" class="btn btn-success" onclick="@Url.Action("", "Restaurant")">Add Vendor</button>*@
                <a href="@Url.Action("AddVendor", "Restaurant")">
                   add  Vendor
                </a>
            </div>
        </div>
        <br />  
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Store Name</th>
                    <th scope="col">Address</th>
                    <th scope="col">List of location</th>
                  
                        <th scope="col">Delete</th>
                    

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.StoreName</td>
                        <td>@item.Address</td>
                        <td>
                            <a href="@Url.Action("Addlocation", "Restaurant", new { VendorID = item.VendorID })">
                                add more/edit
                            </a>
                        </td>
                      
                            <td>
                                <a href="@Url.Action("DeleteVendor", "Restaurant", new { VendorID = item.VendorID })">
                                    Delete Vendor
                                </a>
                            </td>
                        
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
    </div>
</div>
